{
  "name": "homie-backend",
  "version": "1.0.0",
  "description": "Backend for Homie - Property listing and management platform with Fayda integration",
  "main": "src/server.js",
  "type": "commonjs",
  "scripts": {
    "start": "node dist/server.js",
    "dev": "nodemon src/server.js",
    "build": "tsc && npm run db:generate && npm run db:deploy",
    "build:docker": "npm run db:generate",
    "db:generate": "prisma generate",
    "db:deploy": "prisma migrate deploy",
    "db:push": "prisma db push",
    "db:studio": "prisma studio",
    "db:seed": "node prisma/seed.js",
    "test": "jest",
    "test:watch": "jest --watch",
    "test:coverage": "jest --coverage",
    "lint": "eslint src/",
    "lint:fix": "eslint src/ --fix",
    "format": "prettier --write src/",
    "format:check": "prettier --check src/",
    "type-check": "tsc --noEmit",
    "prepare": "cd .. && husky install backend/.husky",
    "pre-commit": "lint-staged"
  },
  "dependencies": {
    "express": "^4.21.2",
    "cors": "^2.8.5",
    "helmet": "^8.0.0",
    "morgan": "^1.10.0",
    "dotenv": "^16.4.7",
    "bcryptjs": "^2.4.3",
    "jsonwebtoken": "^9.0.2",
    "express-rate-limit": "^7.4.1",
    "express-validator": "^7.2.0",
    "@prisma/client": "^6.1.0",
    "prisma": "^6.1.0",
    "redis": "^4.7.0",
    "multer": "^1.4.5-lts.1",
    "cloudinary": "^2.5.1",
    "nodemailer": "^6.9.17",
    "socket.io": "^4.8.1",
    "axios": "^1.7.9",
    "uuid": "^11.0.3",
    "date-fns": "^4.1.0",
    "zod": "^3.24.1",
    "compression": "^1.7.5",
    "express-slow-down": "^2.0.3",
    "hpp": "^0.2.3",
    "express-mongo-sanitize": "^2.2.0"
  },
  "devDependencies": {
    "nodemon": "^3.1.7",
    "jest": "^29.7.0",
    "supertest": "^7.0.0",
    "eslint": "^9.17.0",
    "prettier": "^3.4.2",
    "@types/node": "^22.10.2",
    "@types/express": "^5.0.0",
    "@types/cors": "^2.8.17",
    "@types/bcryptjs": "^2.4.6",
    "@types/jsonwebtoken": "^9.0.7",
    "@types/multer": "^1.4.12",
    "@types/uuid": "^10.0.0",
    "@types/compression": "^1.7.5",
    "@types/hpp": "^0.2.6",
    "husky": "^9.1.7",
    "lint-staged": "^15.2.11",
    "ts-node": "^10.9.2",
    "typescript": "^5.7.2",
    "@eslint/js": "^9.17.0",
    "eslint-plugin-security": "^3.0.1",
    "eslint-plugin-node": "^11.1.0"
  },
  "keywords": [
    "property",
    "rental",
    "management",
    "fayda",
    "kyc",
    "real-estate"
  ],
  "author": "Seid Muhidin, Abdulwahid Sultan",
  "license": "MIT"
}